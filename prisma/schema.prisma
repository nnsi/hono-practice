generator client {
  provider = "prisma-client-js"
}

generator zod {
  provider   = "npx zod-prisma-types"
  output     = "../types/prisma"
  coerceDate = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String     @id @default(uuid())
  loginId    String     @unique @map("login_id")
  name       String?
  password   String
  createdAt  DateTime   @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime?  @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt  DateTime?  @map("deleted_at") @db.Timestamptz(3)
  tasks      Task[]
  activities Activity[]

  @@map("user")
}

model Task {
  id        String    @id @default(uuid())
  userId    String    @map("user_id")
  title     String
  done      Boolean   @default(false)
  memo      String?   @default("")
  createdAt DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt DateTime? @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt DateTime? @map("deleted_at") @db.Timestamptz(3)

  user User @relation(fields: [userId], references: [id])

  @@map("task")
}

model Activity {
  id            String                   @id @default(uuid())
  userId        String                   @map("user_id")
  name          String
  description   String                   @default("")
  quantityLabel String                   @default("") @map("quantity_label")
  createdAt     DateTime                 @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt     DateTime                 @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt     DateTime?                @map("deleted_at") @db.Timestamptz(3)
  logs          ActivityLog[]
  options       ActivityQuantityOption[]
  kinds         ActivityKind[]

  user User @relation(fields: [userId], references: [id])

  @@map("activity")
}

model ActivityQuantityOption {
  id         String    @id @default(uuid())
  activityId String    @map("activity_id")
  quantity   Float
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime  @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt  DateTime? @map("deleted_at") @db.Timestamptz(3)

  activity Activity @relation(fields: [activityId], references: [id])

  @@map("activity_quantity_options")
}

model ActivityLog {
  id             String    @id @default(uuid())
  activityId     String    @map("activity_id")
  activityKindId String?   @map("activity_kind_id")
  quantity       Float?
  memo           String    @default("")
  date           DateTime  @db.Date
  createdAt      DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt      DateTime  @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt      DateTime? @map("deleted_at") @db.Timestamptz(3)

  activity     Activity      @relation(fields: [activityId], references: [id])
  activityKind ActivityKind? @relation(fields: [activityKindId], references: [id])

  @@map("activity_log")
}

model ActivityKind {
  id         String    @id @default(uuid())
  activityId String    @map("activity_id")
  name       String
  createdAt  DateTime  @default(now()) @map("created_at") @db.Timestamptz(3)
  updatedAt  DateTime? @updatedAt @map("updated_at") @db.Timestamptz(3)
  deletedAt  DateTime? @map("deleted_at") @db.Timestamptz(3)

  logs     ActivityLog[]
  activity Activity      @relation(fields: [activityId], references: [id])

  @@map("activity_kind")
}
