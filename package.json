{
  "scripts": {
    "dev": "npm run dev -w actiko-backend",
    "client-dev": "npm run dev -w actiko-frontend",
    "mobile-dev": "npm run web -w mobile",
    "build-client-stg": "npm run build-stg -w actiko-frontend",
    "build-client": "npm run build -w actiko-frontend",
    "test": "vitest --disable-console-intercept",
    "test-once": "vitest run",
    "ci-check": "vitest run && biome lint && eslint",
    "tsc": "tsc --noEmit",
    "lint": "biome lint && eslint",
    "fix": "biome check . --write && eslint --fix",
    "deploy:stg": "wrangler deploy --env stg",
    "deploy:prod": "wrangler deploy --env production",
    "db-generate": "drizzle-kit generate --config=infra/drizzle/drizzle.config.ts",
    "db-migrate": "drizzle-kit migrate --config=infra/drizzle/drizzle.config.ts",
    "gen-be": "node scripts/gen-be.js"
  },
  "workspaces": ["apps/*", "packages/*"],
  "type": "module",
  "dependencies": {
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "lefthook": "^1.10.1",
    "ts-mockito": "^2.6.1",
    "tsx": "^4.19.2",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^3.99.0"
  }
}
