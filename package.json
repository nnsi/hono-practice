{
  "scripts": {
    "dev": "npm run dev -w actiko-backend",
    "client-dev": "npm run dev -w actiko-frontend",
    "mobile-dev": "npm run web -w mobile",
    "build-client-stg": "npm run build-stg -w actiko-frontend",
    "build-client": "npm run build -w actiko-frontend",
    "test": "vitest --disable-console-intercept",
    "test-once": "vitest run",
    "test-e2e": "vitest run --config vitest.e2e.config.ts",
    "ci-check": "vitest run --reporter=dot && biome lint && eslint",
    "tsc": "tsc --noEmit",
    "lint": "biome lint && eslint",
    "fix": "biome check . --write --unsafe && eslint --fix",
    "deploy:stg": "wrangler deploy --env stg",
    "deploy:prod": "wrangler deploy --env production",
    "db-generate": "drizzle-kit generate --config=infra/drizzle/drizzle.config.ts",
    "db-migrate": "drizzle-kit migrate --config=infra/drizzle/drizzle.config.ts",
    "db-seed": "tsx scripts/seed-dev-data.ts",
    "db-clean": "tsx scripts/clean-db.ts",
    "gen-be": "node scripts/gen-be.js"
  },
  "workspaces": ["apps/*", "packages/*"],
  "type": "module",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.5",
    "@hono/node-server": "^1.17.1",
    "@tanstack/query-sync-storage-persister": "^5.82.0",
    "@tanstack/react-query-persist-client": "^5.82.0",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "uuid": "^11.0.3",
    "zod": "^3.24.4"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@trivago/prettier-plugin-sort-imports": "^5.2.0",
    "eslint": "^9.17.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-unused-imports": "^4.1.4",
    "jsdom": "^26.1.0",
    "lefthook": "^1.10.1",
    "msw": "^2.10.4",
    "ts-mockito": "^2.6.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.18.2",
    "vite": "^6.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8",
    "wrangler": "^4.26.1"
  }
}
