{
  "scripts": {
    "dev": "npm run dev -w actiko-backend",
    "client-dev": "npm run dev -w actiko-frontend",
    "mobile-dev": "npm run web -w mobile",
    "build-client-stg": "npm run build-stg -w actiko-frontend",
    "build-client": "npm run build -w actiko-frontend",
    "test": "vitest --disable-console-intercept",
    "test-once": "vitest run",
    "test-e2e": "vitest run --config vitest.e2e.config.ts",
    "ci-check": "vitest run --reporter=dot && biome lint",
    "tsc": "tsc --noEmit",
    "lint": "biome lint",
    "fix": "biome check . --write --unsafe",
    "deploy:stg": "wrangler deploy --env stg",
    "deploy:prod": "wrangler deploy --env production",
    "deploy:tail-stg": "cd apps/tail-worker && npx wrangler deploy --env stg",
    "deploy:tail-prod": "cd apps/tail-worker && npx wrangler deploy --env production",
    "db-generate": "drizzle-kit generate --config=infra/drizzle/drizzle.config.ts",
    "db-migrate": "drizzle-kit migrate --config=infra/drizzle/drizzle.config.ts",
    "db-seed": "tsx scripts/seed-dev-data.ts",
    "db-clean": "tsx scripts/clean-db.ts",
    "gen-be": "node scripts/gen-be.js"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "type": "module",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.5",
    "@hono/node-server": "^1.18.2",
    "@tanstack/query-sync-storage-persister": "^5.90.22",
    "@tanstack/react-query-persist-client": "^5.90.22",
    "biome": "^0.3.3",
    "dayjs": "^1.11.13",
    "drizzle-orm": "^0.44.2",
    "emoji-mart": "^5.6.0",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "uuid": "^11.0.3",
    "zod": "^4.0.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "jsdom": "^26.1.0",
    "lefthook": "^1.10.1",
    "ts-mockito": "^2.6.1",
    "tsx": "^4.19.2",
    "typescript": "^5.8.3",
    "vite": "^6.0.6",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.9",
    "wrangler": "^4.26.1"
  }
}
