#!/bin/bash
# 環境変数設定ファイルのサンプル
# このファイルをコピーして .env.secrets として使用
# 使用方法: source .env.secrets && terraform apply

# Cloudflare認証
export TF_VAR_cloudflare_api_token="your-cloudflare-api-token"
export TF_VAR_cloudflare_account_id="your-cloudflare-account-id"

# アプリケーションシークレット
export TF_VAR_jwt_secret="your-jwt-secret-at-least-32-chars"
export TF_VAR_encryption_key="your-encryption-key-32-chars"
export TF_VAR_database_url="postgresql://user:password@host:5432/database"

# オプション: その他の環境変数
# export TF_VAR_sentry_dsn="https://xxx@sentry.io/xxx"
# export TF_VAR_stripe_secret_key="sk_live_xxx"
# export TF_VAR_smtp_password="your-smtp-password"