{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@packages/domain/*": [
        "../../packages/domain/*"
      ],
      "@packages/sync-engine": [
        "../../packages/sync-engine/index.ts"
      ],
      "@packages/sync-engine/*": [
        "../../packages/sync-engine/*"
      ],
      "@packages/platform": [
        "../../packages/platform/index.ts"
      ],
      "@packages/platform/*": [
        "../../packages/platform/*"
      ],
      "@packages/api-contract": [
        "../../packages/api-contract/index.ts"
      ],
      "@packages/types-v2/*": [
        "../../packages/types-v2/*"
      ],
      "@packages/frontend-shared/*": [
        "../../packages/frontend-shared/*"
      ],
      "@/*": [
        "./src/*"
      ],
      "@backend/*": [
        "../../apps/backend/*"
      ],
      "@infra/*": [
        "../../infra/*"
      ],
      "@dtos/*": [
        "../../packages/types/*"
      ],
      "@domain/*": [
        "../../apps/backend/domain/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}
